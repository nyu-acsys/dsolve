val add:
  'a ->
  int ->
  t: TREE(z, e0: 'a, e1: int, U(e2, z), R(e3, z, height e3 <= height e2 + 2 and height e3 >= height e2 - 2), {e4: int | e4 = (height e2 >= height e3 ? height e2 + 1 : height e3 + 1)}) ->
  {v': TREE(z, e0: 'a, e1: int, U(e2, z), R(e3, z, height e3 <= height e2 + 2 and height e3 >= height e2 - 2), {e4: int | e4 = (height e2 >= height e3 ? height e2 + 1 : height e3 + 1)}) | height v' <= height t + 1 and height v' >= height t}
