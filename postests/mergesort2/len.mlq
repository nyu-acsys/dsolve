measure len =
    [] -> 0
  | x :: xs -> 1 + len xs
 
measure llen = 
    Nil -> 0
  | Cons(xs, xss) -> len xs + llen xss

val mergesort2: l:
  [[], [v: true, v: true]] [t: list . || e0: 'a, e1: [[], [v: true, v: true]] t] ->
  {v : [[], [v: true, v: true]] [t: list . || e0: 'a, e1: [[], [v: true, v: true]] t] | len v = len l}
