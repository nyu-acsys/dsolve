#
# Various options
#
# OCAMLFLAGS    +=
# OCAMLCFLAGS   +=
# OCAMLOPTFLAGS +=
# OCAML_LINK_FLAGS +=
OCAML_BYTE_LINK_FLAGS += -ccopt -L../yices/lib/ -cclib -loyices -cclib -lyices -cclib -lgmp
OCAML_NATIVE_LINK_FLAGS += -lstdc++ -lgmp

################################################
# Build an OCaml program
#

FILES = ../misc ../theoremProver ../predicate ../type ../builtins ../expr ../constraint test_constraint suite
PROGRAM = suite
OCAML_LIBS += /usr/lib/ocaml/3.09.2/oUnit/oUnit ../yices/lib/oyices
# OCAML_CLIBS +=
OCAML_OTHER_LIBS += unix
# OCAML_LIB_FLAGS += -lgraph
OCamlProgram($(PROGRAM), $(FILES))
.DEFAULT: $(PROGRAM).run
