#define TRUEREF [[], [v: true, v: true, v: true, v: true, v: true]]
#define R(name, rec, ref) {name: TRUEREF rec | ref}
#define U(name, rec) name: TRUEREF rec
#define TREE(rec, k, v, l, r, h) TRUEREF [rec: t . || k, v, l, r, h]

measure height =
    Empty -> 0
  | Node (_, _, _, _, h) -> h

